    <select id="queryHomepageExpertList" resultType="java.util.Map">
    select a.connectedId as id,a.imgUrl,a.title
    from t_sys_advertising a
    left join t_sys_adv_attr at on at.id = a.advAttrId
    where at.chanType = #{chanType}
    and at.page = #{page}
    and at.advArea = #{advArea}
    and at.advType = #{advType}
    order by a.sort asc
  </select>

    <update id="deleteLookedExpert" parameterType="java.lang.String">
    update t_zhb_viewGoods
    set status = 1
    where id = #{id}
  </update>

    <select id="findAllMyLookedExpertList" resultType="java.util.Map">
        select e.id,e.name,e.company,e.position,
        case when e.expertType = '1' then '协会专家'
        when e.expertType = '2' then '行业专家' end as expertType,
        date_format(v.viewTime,'%Y-%m-%d') viewTime,v.id as recordId
        from t_zhb_viewGoods v
        left join t_e_expert e on v.goodsId = e.id
        where v.type = 'CKZJXX' and v.`status` = 0
        <if test="companyId != null">
            and v.companyId = #{companyId}
        </if>
        <if test="viewerId != null">
            and v.viewerId = #{viewerId}
        </if>
        order by v.viewTime desc
    </select>
