  </select>
    <select id="queryHotExpert" resultMap="BaseResultMap">
    SELECT * FROM t_e_expert WHERE is_deleted = 0 and status = 1 ORDER by views desc limit 0,#{count}
  </select>
    <select id="queryLatestExpert" resultMap="BaseResultMap">
