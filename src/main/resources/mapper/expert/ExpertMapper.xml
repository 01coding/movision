  <select id="queryExpertById" resultMap="BaseResultMap" parameterType="java.lang.String" >
    SELECT e.*,p.name as provinceName,c.name as cityName,ar.name as areaName FROM t_e_expert e
    LEFT JOIN t_dictionary_province p on e.province = p.code
    LEFT JOIN t_dictionary_city c on e.city = c.code
    LEFT JOIN t_dictionary_area ar on e.area = ar.code
    WHERE e.id = #{id}
  </select>
  <select id="queryExpertByCreateId" resultMap="BaseResultMap" parameterType="java.lang.String" >
