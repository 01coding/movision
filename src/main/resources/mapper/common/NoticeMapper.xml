<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuhuibao.mybatis.oms.mapper.NoticeMapper">
  <resultMap id="BaseResultMap" type="com.zhuhuibao.mybatis.oms.entity.Notice">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="content" jdbcType="VARCHAR" property="content" />
    <result column="time" jdbcType="TIMESTAMP" property="time" />
    <result column="createId" jdbcType="BIGINT" property="createId" />
    <result column="status" jdbcType="VARCHAR" property="status" />
    <result column="reason" jdbcType="VARCHAR" property="reason" />
     <result column="userName" jdbcType="VARCHAR" property="userName" />
    <result column="time" jdbcType="VARCHAR" property="time" />
  </resultMap>
  <sql id="Base_Column_List">
    id, title, content, createId, date_format(time,'%Y-%m-%d %H:%i:%s') time,status,reason
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from t_oms_notice
    where id = #{id,jdbcType=BIGINT}
  </select>
  
  <select id="findAllNotice" resultMap="BaseResultMap" parameterType="java.util.Map" >
    select 
    <include refid="Base_Column_List" />
    ,(select u.username from t_oms_user u where u.id=a.createid) userName
    
    from t_oms_notice a
    
    <where>
      <if test="title != null">
        and a.title like CONCAT('%',#{title},'%')
      </if>
      <if test="status != null">
        and a.status = #{status}
      </if>
      <if test="userName != null">
        and a.username = #{userName}
      </if>
    </where> 
	order by a.time desc 
  </select>
  
  
  <select id="queryPlatformNewNotice" resultMap="BaseResultMap" parameterType="java.util.Map" >
    select 
     id, title, content
    ,DATE_FORMAT(time,'%Y-%m-%d') time 
    from t_oms_notice a 
    order by time desc LIMIT 10
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from t_oms_notice
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="publishNotice" parameterType="com.zhuhuibao.mybatis.oms.entity.Notice">
    insert into t_oms_notice (title, content, 
      createId, time
      )
    values (#{title,jdbcType=VARCHAR}, #{content,jdbcType=VARCHAR}, 
      #{createId,jdbcType=BIGINT}, now()
      )
  </insert>
  <insert id="insertSelective" parameterType="com.zhuhuibao.mybatis.oms.entity.Notice">
    insert into t_oms_notice
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="title != null">
        title,
      </if>
      <if test="content != null">
        content,
      </if>
      <if test="createId != null">
        createId,
      </if>
       
       , time 
      
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="title != null">
        #{title,jdbcType=VARCHAR},
      </if>
      <if test="content != null">
        #{content,jdbcType=VARCHAR},
      </if>
      <if test="createId != null">
        #{createId,jdbcType=BIGINT},
      </if>
     
       ,now()
      
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.zhuhuibao.mybatis.oms.entity.Notice">
    update t_oms_notice
    <set>
      <if test="title != null">
        title = #{title,jdbcType=VARCHAR},
      </if>
      <if test="content != null">
        content = #{content,jdbcType=VARCHAR},
      </if>
      <if test="createId != null">
        createId = #{createId,jdbcType=BIGINT},
      </if>
   
        time = now(),
     
      <if test="status != null">
        status = #{status,jdbcType=VARCHAR},
      </if>
      <if test="reason != null">
        reason = #{reason},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>
</mapper>