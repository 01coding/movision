  <select id="queryExhibitionInfoById" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select 
    e.*,ci.name as cityName,p.name as provinceName,a.name as areaName
    from t_c_exhibition e
    left join t_dictionary_city ci on ci.code = e.city
    left join t_dictionary_province p on p.code = e.province
    left join t_dictionary_area a on a.code = e.area
    where e.id = #{id}
  </select>
