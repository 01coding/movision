<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhuhuibao.mybatis.memCenter.mapper.CertificateRecordMapper" >
  <resultMap id="BaseResultMap" type="com.zhuhuibao.mybatis.memCenter.entity.CertificateRecord" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="mem_id" property="mem_id" jdbcType="INTEGER" />
    <result column="certificate_number" property="certificate_number" jdbcType="VARCHAR" />
    <result column="certificate_name" property="certificate_name" jdbcType="VARCHAR" />
    <result column="certificate_id" property="certificate_id" jdbcType="VARCHAR" />
    <result column="certificate_grade" property="certificate_grade" jdbcType="VARCHAR" />
    <result column="certificate_url" property="certificate_url" jdbcType="VARCHAR" />
    <result column="type" property="type" jdbcType="VARCHAR" />
    <result column="time" property="time" jdbcType="TIMESTAMP" />
    <result column="is_deleted" property="is_deleted" jdbcType="INTEGER" />
    <result column="status" property="status" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, mem_id, certificate_number, certificate_name, certificate_grade,certificate_id,
    certificate_url,type, time, is_deleted,status
  </sql>
  <insert id="saveCertificate" parameterType="com.zhuhuibao.mybatis.memCenter.entity.CertificateRecord" >
    insert into t_certificate_record (id, mem_id, certificate_number,certificate_id,
    certificate_name, certificate_grade, certificate_url,type, time, is_deleted,status
    )
    values (#{id,jdbcType=BIGINT}, #{mem_id}, #{certificate_number},#{certificate_id},
    #{certificate_name}, #{certificate_grade},  #{certificate_url}, #{type},#{time}, 0,0
    )
  </insert>
  <update id="updateCertificate" parameterType="com.zhuhuibao.mybatis.memCenter.entity.CertificateRecord">
    update t_certificate_record
    <set>
      <if test="mem_id != null">
        mem_id = #{mem_id},
      </if>
      <if test="certificate_number != null">
        certificate_number = #{certificate_number},
      </if>
      <if test="certificate_name != null">
        certificate_name = #{certificate_name},
      </if>
      <if test="certificate_id != null">
        certificate_id = #{certificate_id},
      </if>
      <if test="certificate_grade != null">
        certificate_grade = #{certificate_grade},
      </if>
      <if test="certificate_url != null">
        certificate_url = #{certificate_url},
      </if>
      <if test="type != null">
        type = #{type},
      </if>
      <if test="time != null">
        time = #{time},
      </if>
      <if test="is_deleted != null">
        is_deleted = #{is_deleted},
      </if>
      <if test="status != null">
        status = #{status},
      </if>
    </set>
    where id = #{id}
  </update>
  <update id="deleteCertificate" parameterType="com.zhuhuibao.mybatis.memCenter.entity.CertificateRecord">
    update t_certificate_record
    <set>
        is_deleted = 1
    </set>
    where id = #{id}
  </update>
  <select id="certificateSearch" parameterType="com.zhuhuibao.mybatis.memCenter.entity.CertificateRecord" resultMap="BaseResultMap">
    select
      <include refid="Base_Column_List" />
    from t_certificate_record
    where
      mem_id = #{mem_id} and type = #{type} and is_deleted = 0 and status = 1
  </select>
</mapper>